{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es6", "DOM.Iterable", "scripthost"],
    "experimentalDecorators": true,
    "module": "es2015",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
